<section class="centered-content">
  <h1>Sign up</h1>
  <%= form_for @user, url: "/sign-up" do |f|%>
    <%= f.label :username%><br>
    <%= f.text_field :username, :required => true %><br>
    <%= f.label :password%><br>
    <%= f.password_field :password, :required => true %><br>
    <%= f.submit 'Sign up' %>
  <%end%>
</section>