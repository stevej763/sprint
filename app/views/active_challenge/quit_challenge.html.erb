<main class="challenge-container">
  <h1 class="quit-challenge-page-title">Quit challenge</h1>

  <div class="active-challenge-details">
  <h2 class="quit-challenge-page-title">Are you sure you want to quit this challenge?</h2>
  <h2 class="quit-challenge-sub-heading">All challenge progress will be lost.</h2>
  <div class="active-challenge-heading">
    <div>
      <% if active_challenge_parent_challenge.icon.attached?%>
        <%= image_tag(active_challenge_parent_challenge.icon, class: "challenge-icon")%>
      <%end%>
    </div>
    <h3 class="challenge-title"><%= active_challenge_parent_challenge.title%></h3> 
  </div>
  <div class="quit-options">
  <%= button_to "Yes", "/quit-challenge-confirmed", method: :delete, class: "quit-challenge-option-button" %>
  <%= button_to "No", "/", method: :get, class: "quit-challenge-option-button" %>
  </div>
</div>
</main>